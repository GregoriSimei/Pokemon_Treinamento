 pipeline{
    
    agent any

    stages {

	stage('Angular tests'){
	   steps{
	   	sh 'ls -l'
	   }
	}

        stage('Build Angular Project'){
	    agent { dockerfile { args "-v ${JENKINS_HOME}:/home/node/app" } }
            steps {
		            sh 'ng build --prod'
            }
        }

        stage('Deployment'){
             steps{
                sh 'pwd'
            }
        }

    }

}
